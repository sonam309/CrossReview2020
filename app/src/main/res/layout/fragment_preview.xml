<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    tools:context=".Fragment.PreviewFragment">

    <TextView
        android:id="@+id/txt_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_splash_bg"
        android:gravity="center"
        android:padding="@dimen/dp20"
        android:text="@string/preview"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22"
        android:textStyle="bold" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgcolor"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="@string/BasicInfo"
                    android:textColor="@color/headingcolor"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/view_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_emp_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:text="@string/Name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16" />

                        <TextView
                            android:id="@+id/txt_emp_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:text="@string/phone"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txt_emp_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:text="@string/email"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp10"
                                android:text="@string/DOB"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16" />

                            <TextView
                                android:id="@+id/txt_emp_dob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp5"
                                android:text="@string/date"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/txt_emp_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:text="@string/Gender"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16" />

                        <TextView
                            android:id="@+id/txt_emp_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:text="@string/address"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp70"
                        android:layout_alignParentRight="true"
                        android:background="@color/bgcolordark"
                        android:scaleType="fitXY"
                       android:layout_marginRight="@dimen/dp30"
                        android:layout_marginTop="@dimen/dp20"
                        android:src="@drawable/ic_profile" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:orientation="vertical"
                android:padding="@dimen/dp20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="@string/veriferdetails"
                    android:textColor="@color/headingcolor"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/view_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_company_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:text="@string/Company_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/txt_company_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:text="@string/Company_address"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14" />


                        <TextView
                            android:id="@+id/txt_company_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:text="@string/state"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.4"
                                android:padding="@dimen/dp10"
                                android:text="@string/verifer"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/company_hr_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp5"
                                    android:text="@string/Name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/company_hr_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp5"
                                    android:text="@string/EMAIL"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/company_hr_contact"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp5"
                                    android:text="@string/Contact"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/employmentDetail_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:orientation="vertical"
                android:padding="@dimen/dp20"
                android:visibility="gone"
               >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="@string/employement_details"
                    android:textColor="@color/headingcolor"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/view_bg" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/employedetaill_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:orientation="vertical"
                android:padding="@dimen/dp20"
                android:id="@+id/education_detail_ll"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="@string/education_detail"
                    android:textColor="@color/headingcolor"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/view_bg" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/education_details_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:orientation="vertical"
                android:id="@+id/txt_police_varification_ll"
                android:visibility="gone"
                android:padding="@dimen/dp20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="@string/police_verification_details"
                    android:textColor="@color/headingcolor"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/view_bg" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/personalDetails_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/address_RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_back_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp120"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_btn_blue_strock"
                    android:gravity="center"
                    android:padding="@dimen/dp12"
                    android:text="@string/back"
                    android:textAllCaps="true" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/makePayment_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginBottom="@dimen/dp30"
                    android:elevation="@dimen/dp20"
                    app:cardCornerRadius="@dimen/dp8"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_color_skyblue_bg_btn"
                        android:gravity="center"
                        android:padding="@dimen/dp10"
                        android:text="@string/Makepayment"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginBottom="@dimen/dp30"
                    android:elevation="@dimen/dp20"
                    app:cardCornerRadius="@dimen/dp8"
                    android:visibility="gone"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_color_skyblue_bg_btn"
                        android:gravity="center"
                        android:padding="@dimen/dp10"
                        android:text="@string/Submit"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>



