<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emploeyment_mainll"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    tools:context=".Fragment.EmployeeDetail.EmployementDetailsFragment">

    <TextView
        android:id="@+id/txt_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_splash_bg"
        android:gravity="center"
        android:padding="@dimen/dp20"
        android:text="@string/employement_details"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainll"
            android:background="@color/bgcolor"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/employee_Detail_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginTop="@dimen/dp30"
                android:layout_marginRight="@dimen/dp25"
                android:background="@drawable/square_white_bg"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp20"
                android:paddingTop="@dimen/dp10"
                android:paddingRight="@dimen/dp20"
                android:paddingBottom="@dimen/dp10"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_tile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/employee_detail"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:src="@drawable/ic_edit" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/employee_status_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp25"
                android:background="@drawable/square_white_bg"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp20"
                android:paddingTop="@dimen/dp10"
                android:paddingRight="@dimen/dp20"
                android:paddingBottom="@dimen/dp10"
                android:visibility="visible">

                <TextView
                    android:id="@+id/employee_stauts_tile_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/employee_status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:src="@drawable/ic_edit" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/addEmploymentDetailTile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


            <LinearLayout
                android:id="@+id/addEmploymentDetailView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--                <include-->
                <!--                    android:id="@+id/employment_detail_ll"-->
                <!--                    layout="@layout/employement_detail_layout" />-->

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/txt_add_employement_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp8"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginRight="@dimen/dp8"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20">


                <TextView
                    android:id="@+id/txt_add_employement_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp10"
                    android:text="@string/add_employement"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_toRightOf="@+id/txt_add_employement_tv"
                    android:src="@drawable/ic_add" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/next_btn"
                android:layout_width="@dimen/dp120"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp30"
                android:layout_marginRight="@dimen/dp50"
                android:layout_marginBottom="@dimen/dp30"
                android:elevation="@dimen/dp20"
                app:cardCornerRadius="@dimen/dp8"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_color_skyblue_bg_btn"
                    android:gravity="center"
                    android:padding="@dimen/dp10"
                    android:text="@string/Next"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>

</LinearLayout>