<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ThankYouFragment">

    <TextView
        android:id="@+id/txt_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_splash_bg"
        android:gravity="center"
        android:padding="@dimen/dp20"
        android:text="@string/thanku"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp20"
        app:cardElevation="@dimen/dp10"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/view_rl"
                android:layout_height="wrap_content">

            <View

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:background="@color/appcolor" />

            <ImageView
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_check" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linera_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp160"
                android:layout_below="@id/view_rl"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/great"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_25"
                    android:padding="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/dp20"
                    android:text="@string/paymentConfirm"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/black"
                    android:text="@string/checkemail"/>


            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>