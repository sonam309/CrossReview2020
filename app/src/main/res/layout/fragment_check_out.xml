<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.CheckOutFragment">

    <TextView
        android:id="@+id/txt_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_splash_bg"
        android:gravity="center"
        android:padding="@dimen/dp20"
        android:text="@string/checkout"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="@dimen/dp50"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20"
        android:background="@drawable/square_white_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:background="@color/grey"
            android:padding="@dimen/dp14"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/avaliable_point"
            android:textColor="@color/appcolor"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_avaliable_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:text="300"
            android:layout_marginLeft="@dimen/dp5"
            android:textColor="@color/appcolor"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp15">

            <ImageView
                android:id="@+id/bullete1"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:src="@drawable/ic_double_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/txt_employment_bg_check_tv"
                android:layout_toRightOf="@id/bullete1"
                android:padding="@dimen/dp10"
                android:text="@string/employment_bg_check"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp10"
                android:id="@+id/txt_employment_bg_check_points_tv"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp15">

            <ImageView
                android:id="@+id/bullete2"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:src="@drawable/ic_double_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/bullete2"
                android:padding="@dimen/dp10"
                android:id="@+id/txt_employment_edu_check_tv"
                android:text="@string/employment_edu_check"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp10"
                android:id="@+id/txt_employment_edu_check_points_tv"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp15">

            <ImageView
                android:id="@+id/bullete3"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:src="@drawable/ic_double_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/bullete3"
                android:padding="@dimen/dp10"
                android:id="@+id/txt_employment_criminal_bg_check_tv"
                android:text="@string/employment_criminal_bg_check"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp10"
                android:id="@+id/txt_employment_criminal_bg_check_points_tv"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:background="@color/grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:padding="@dimen/dp10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp12"
                android:textStyle="bold"
                android:text="@string/total_points_paid"
                android:textColor="@color/appcolor"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/txt_total_paid_points_tv"
                android:padding="@dimen/dp12"
                android:textStyle="bold"
                android:textColor="@color/appcolor"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_back_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp120"
            android:layout_marginRight="@dimen/dp10"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner_btn_blue_strock"
            android:gravity="center"
            android:padding="@dimen/dp12"
            android:text="@string/back"
            android:textAllCaps="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/pay_now_btn"
            android:layout_width="@dimen/dp170"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp30"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp30"
            android:elevation="@dimen/dp20"
            app:cardCornerRadius="@dimen/dp8"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_color_skyblue_bg_btn"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="@string/paynow"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>